<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".grammar.Grammar_List">

    <LinearLayout
        android:id="@+id/linearGrammar"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="5dp"

        android:orientation="horizontal"
        tools:ignore="InvalidId"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/tv_G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="G"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="R"
            android:textColor="@color/colorBlue"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="A"
            android:textColor="@color/darkOrange"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="M"
            android:textColor="@color/colorAccent"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_M2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="M"
            android:textColor="@color/purple_700"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_A2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="A"
            android:textColor="#14DCDC"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fredokaoneregular"
            android:text="R"
            android:textColor="@color/colorAccent2"
            android:textSize="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearGrammar"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            android:textSize="30dp"
            android:hint="Tense Name"
            android:textAllCaps="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#05B63F"
            android:textAlignment="center"/>

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/lndetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Định nghĩa: "
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvDinhnghia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Định nghĩa"
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#323131"
                android:textStyle="bold"
                android:text="Cấu trúc: "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvKhangdinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Khẳng định"
                android:textColor="#323131"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tvNghivan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nghi vấn"
                android:textColor="#323131"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tvPhudinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phủ định"
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chú thích: "
                android:textStyle="bold"
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvChuthich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chú thích"
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dấu hiệu: "
                android:textColor="#323131"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvDauhieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dấu hiệu"
                android:textColor="#323131"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ví dụ: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#323131"/>

            <TextView
                android:id="@+id/tvVidu"
                android:textColor="#323131"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ví dụ"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>