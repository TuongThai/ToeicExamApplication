<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tV_topic"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fredokaoneregular"
            android:gravity="center"
            android:text="Topic Name"
            android:textColor="@color/cPrimary"
            android:textSize="40dp"
            android:textStyle="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tV_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="Beautiful"
            android:textAlignment="center"
            android:textColor="@color/shadow_color"
            android:textSize="70sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tV_pronun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="pronunciation"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="30dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tV_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="type"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:textSize="25dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tV_mean"
            android:layout_width="400dp"
            android:layout_height="85dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="mean"
            android:textAlignment="center"
            android:textColor="@color/shadow_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/btn_Before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/lightGrey"
                android:text="Before"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn_Next"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_remember"
                android:layout_width="66dp"
                android:layout_height="61dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintLeft_toRightOf="@+id/btn_Before"
                app:layout_constraintRight_toLeftOf="@+id/btn_Next"
                app:srcCompat="@drawable/img"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightGrey"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>